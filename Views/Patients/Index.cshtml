@model IEnumerable<HospitalManagementSystem.Models.Patient>

@{
    ViewBag.Title = "Index";
}

<h2>List of Patients</h2>

<p>
    @Html.ActionLink("Add new patient", "Create", null, new { @class = "btn btn-primary btn-lgt" })
    @Html.ActionLink("Search Patient", "ShowSearchForm", "Patients", null, new { @class = "btn btn-primary btn-lgt" })
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patient_number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalAid_number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emailaddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephonenumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient_number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedicalAid_number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Emailaddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephonenumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Patient_id }, new { @class = "btn btn-primary btn-lgt" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Patient_id }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Patient_id }, new { @class = "btn btn-danger" })

                </td>

            </tr>
        }

    </table>
